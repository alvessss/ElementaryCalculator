<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/holo_blue_light">
    <!--
        ids:
            result -> calculatorResultTextView
            numbers buttons -> button_0, button_1, ...
            operators -> button_plus, button_less_ button_times, button_divided
    -->
    <RelativeLayout
        android:id="@+id/calculatorContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:id="@+id/calculatorResult"
            android:layout_width="376dp"
            android:layout_height="70dp"
            android:background="@color/ice_white"
            android:layout_centerHorizontal="true">
            <RelativeLayout
                android:id="@+id/calculatorResultDisplay"
                android:layout_width="360dp"
                android:layout_height="52dp"
                android:background="@color/old_screen"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/calculatorResultTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="40sp"
                    android:textColor="@color/ice_white"
                    android:gravity="right"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/calculatorButtons"
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:background="@color/ice_white"
            android:layout_below="@id/calculatorResult"
            android:layout_centerHorizontal="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:text="1"
                android:textSize="25sp"
                android:textColor="@color/smooth_black"
                android:backgroundTint="@color/white"
                android:layout_margin="2dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:text="2"
                android:textSize="25sp"
                android:textColor="@color/smooth_black"
                android:backgroundTint="@color/white"
                android:layout_toRightOf="@id/button_1"
                android:layout_margin="2dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:text="3"
                android:textSize="25sp"
                android:textColor="@color/smooth_black"
                android:backgroundTint="@color/white"
                android:layout_toRightOf="@id/button_2"
                android:layout_margin="2dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:text="+"
                android:textSize="25sp"
                android:textColor="@color/smooth_black"
                android:backgroundTint="@color/white"
                android:layout_toRightOf="@id/button_3"
                android:layout_margin="2dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:text="4"
                android:textSize="25sp"
                android:textColor="@color/smooth_black"
                android:backgroundTint="@color/white"
                android:layout_below="@id/button_1"
                android:layout_margin="2dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:text="5"
                android:textSize="25sp"
                android:textColor="@color/smooth_black"
                android:backgroundTint="@color/white"
                android:layout_below="@id/button_2"
                android:layout_toRightOf="@id/button_4"
                android:layout_margin="2dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:text="6"
                android:textSize="25sp"
                android:textColor="@color/smooth_black"
                android:backgroundTint="@color/white"
                android:layout_below="@id/button_3"
                android:layout_toRightOf="@id/button_5"
                android:layout_margin="2dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_less"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:text="-"
                android:textSize="25sp"
                android:textColor="@color/smooth_black"
                android:backgroundTint="@color/white"
                android:layout_below="@id/button_plus"
                android:layout_toRightOf="@id/button_6"
                android:layout_margin="2dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:text="7"
                android:textSize="25sp"
                android:textColor="@color/smooth_black"
                android:backgroundTint="@color/white"
                android:layout_below="@id/button_4"
                android:layout_margin="2dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:text="8"
                android:textSize="25sp"
                android:textColor="@color/smooth_black"
                android:backgroundTint="@color/white"
                android:layout_below="@id/button_5"
                android:layout_toRightOf="@id/button_7"
                android:layout_margin="2dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:text="9"
                android:textSize="25sp"
                android:textColor="@color/smooth_black"
                android:backgroundTint="@color/white"
                android:layout_below="@id/button_6"
                android:layout_toRightOf="@id/button_8"
                android:layout_margin="2dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_times"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:textAllCaps="false"
                android:text="x"
                android:textSize="25sp"
                android:textColor="@color/smooth_black"
                android:backgroundTint="@color/white"
                android:layout_below="@id/button_less"
                android:layout_toRightOf="@id/button_9"
                android:layout_margin="2dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:textAllCaps="false"
                android:text="0"
                android:textSize="25sp"
                android:textColor="@color/smooth_black"
                android:backgroundTint="@color/white"
                android:layout_below="@id/button_7"
                android:layout_margin="2dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:textAllCaps="false"
                android:text="."
                android:textSize="25sp"
                android:textColor="@color/smooth_black"
                android:backgroundTint="@color/white"
                android:layout_below="@id/button_8"
                android:layout_toRightOf="@id/button_0"
                android:layout_margin="2dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:textAllCaps="false"
                android:text="C"
                android:textSize="25sp"
                android:textColor="@color/smooth_black"
                android:backgroundTint="@color/white"
                android:layout_below="@id/button_9"
                android:layout_toRightOf="@id/button_dot"
                android:layout_margin="2dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divided"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:textAllCaps="false"
                android:text="/"
                android:textSize="25sp"
                android:textColor="@color/smooth_black"
                android:backgroundTint="@color/white"
                android:layout_below="@id/button_9"
                android:layout_toRightOf="@id/button_c"
                android:layout_margin="2dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>